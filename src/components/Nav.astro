---
const navItems = [
  {
    title: "Inicio",
    path: "/",
  },
  {
    title: "Blog",
    items: [
      { title: "Grid Layout", path: "/blog/grid-layout" },
      { title: "Flex Layout", path: "/blog/flex-layout" },
      { title: "Post Completo", path: "/blog/post" },
    ],
  },
  {
    title: "Login",
    items: [
      { title: "BÃ¡sico", path: "/login/basic" },
      { title: "Moderno", path: "/login/modern" },
      { title: "Animado", path: "/login/animated" },
      { title: "Glassmorphism", path: "/login/glassmorphism" },
    ],
  },
  {
    title: "UI",
    items: [
      { title: "Botones", path: "/ui/buttons-example" },
      { title: "Formularios", path: "/ui/form-styling" },
      { title: "Pseudo-clases", path: "/ui/pseudo-classes-demo" },
    ],
  },
];
---

<nav class="bg-gray-800 text-white shadow-lg">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <a href="/" class="text-xl font-bold">Astro UI Examples</a>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden focus:outline-none">
        <span class="icon-[heroicons--bars-3] text-2xl"></span>
      </button>

      <!-- Desktop menu -->
      <div class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <div class="relative group">
              {!item.items ? (
                <a
                  href={item.path}
                  class="hover:text-cyan-300 transition-colors"
                >
                  {item.title}
                </a>
              ) : (
                <>
                  <button class="hover:text-cyan-300 transition-colors flex items-center gap-1">
                    {item.title}
                    <span class="icon-[heroicons--chevron-down] text-sm" />
                  </button>
                  <div class="absolute hidden group-hover:block bg-gray-700 rounded-md shadow-lg py-2 min-w-[200px] z-10">
                    {item.items.map((subItem) => (
                      <a
                        href={subItem.path}
                        class="block px-4 py-2 hover:bg-gray-600 hover:text-cyan-300 transition-colors"
                      >
                        {subItem.title}
                      </a>
                    ))}
                  </div>
                </>
              )}
            </div>
          ))
        }
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-2">
        {
          navItems.map((item) => (
            <div>
              {!item.items ? (
                <a
                  href={item.path}
                  class="block px-3 py-2 hover:bg-gray-700 rounded"
                >
                  {item.title}
                </a>
              ) : (
                <details class="group">
                  <summary class="flex justify-between items-center px-3 py-2 hover:bg-gray-700 rounded cursor-pointer">
                    <span>{item.title}</span>
                    <span class="icon-[heroicons--chevron-down] text-sm group-open:rotate-180 transition-transform" />
                  </summary>
                  <div class="ml-4 mt-1 space-y-1">
                    {item.items.map((subItem) => (
                      <a
                        href={subItem.path}
                        class="block px-3 py-2 hover:bg-gray-600 rounded"
                      >
                        {subItem.title}
                      </a>
                    ))}
                  </div>
                </details>
              )}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu
  document
    .getElementById("mobile-menu-button")
    .addEventListener("click", () => {
      const menu = document.getElementById("mobile-menu");
      menu.classList.toggle("hidden");
    });
</script>

<style>
  @reference "tailwindcss";

  /* Custom styles for the dropdown */
  .group:hover .group-hover\:block {
    display: block;
  }
</style>
