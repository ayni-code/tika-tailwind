---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <div
    class="bg-gradient-to-br from-rose-50 to-gray-100 flex justify-center items-center min-h-screen p-4"
  >
    <div class="bg-white rounded-xl shadow-lg p-8 w-full max-w-md text-center">
      <div
        class="bg-rose-500 rounded-full w-16 h-16 flex justify-center items-center mx-auto mb-6 shadow-md"
      >
        <span class="text-4xl text-white icon-[mdi--shield-account]"></span>
      </div>

      <h1 class="text-2xl font-bold text-gray-800 mb-2">Bienvenido de nuevo</h1>
      <p class="text-gray-500 mb-6">Inicia sesión para acceder a tu cuenta</p>

      <form action="#" method="POST" class="space-y-5">
        <div>
          <label
            for="username"
            class="block text-gray-700 text-sm font-medium mb-2 text-left"
          >
            Nombre de usuario
          </label>
          <div class="relative">
            <span
              class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 icon-[mdi--account]"
            ></span>
            <input
              type="text"
              id="username"
              name="username"
              class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-300 focus:border-rose-400 outline-none transition"
              placeholder="Ej: usuario123"
              autocomplete="username"
            />
          </div>
        </div>

        <div>
          <label
            for="password"
            class="block text-gray-700 text-sm font-medium mb-2 text-left"
          >
            Contraseña
          </label>
          <div class="relative">
            <span
              class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 icon-[mdi--lock]"
            ></span>
            <input
              type="password"
              id="password"
              name="password"
              class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-300 focus:border-rose-400 outline-none transition"
              placeholder="••••••••"
              autocomplete="current-password"
            />
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input
              id="remember-me"
              name="remember-me"
              type="checkbox"
              class="h-4 w-4 text-rose-500 focus:ring-rose-500 border-gray-300 rounded"
            />
            <label for="remember-me" class="ml-2 block text-sm text-gray-700">
              Recordar sesión
            </label>
          </div>

          <a
            href="#"
            class="text-sm font-medium text-rose-500 hover:text-rose-700"
          >
            ¿Contraseña olvidada?
          </a>
        </div>

        <button
          type="submit"
          class="w-full bg-rose-500 hover:bg-rose-600 text-white font-medium py-2.5 px-4 rounded-lg shadow-md transition duration-200 focus:outline-none focus:ring-2 focus:ring-rose-400 focus:ring-offset-2"
        >
          Iniciar sesión
        </button>

        <p class="text-sm text-gray-500 mt-4">
          ¿No tienes una cuenta?
          <a href="#" class="font-medium text-rose-500 hover:text-rose-700">
            Regístrate
          </a>
        </p>
      </form>
    </div>
  </div>
</Layout>
