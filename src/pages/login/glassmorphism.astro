---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <div
    class="min-h-screen flex items-center justify-center p-4"
    style="background-image: url('https://picsum.photos/800/600'); background-size: cover; background-position: center;"
  >
    <!-- Capa de overlay para mejorar contraste -->
    <div class="absolute inset-0 bg-black/40"></div>

    <!-- Tarjeta principal con efecto vidrio -->
    <div
      class="relative z-10 w-full max-w-md bg-white/15 backdrop-blur-lg rounded-xl shadow-xl border border-white/20 overflow-hidden"
    >
      <!-- Contenedor de contenido con fondo semitransparente -->
      <div class="bg-white/80 backdrop-blur-xs p-8">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-800">INICIAR SESIÓN</h1>
          <p class="text-gray-600 mt-2">
            Ingresa tus credenciales para continuar
          </p>
        </div>

        <form class="space-y-5">
          <!-- Campo de email -->
          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Correo electrónico</label
            >
            <div class="relative">
              <div
                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-500 group-focus-within:text-blue-600 transition-colors"
              >
                <span class="icon-[heroicons--envelope]"></span>
              </div>
              <input
                type="email"
                class="w-full pl-10 pr-4 py-3 bg-white/90 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition placeholder-gray-400"
                placeholder="ejemplo@dominio.com"
                required
              />
            </div>
          </div>

          <!-- Campo de contraseña -->
          <div class="group">
            <div class="flex justify-between items-center mb-1">
              <label class="block text-sm font-medium text-gray-700"
                >Contraseña</label
              >
              <a
                href="#"
                class="text-sm text-blue-600 hover:text-blue-800 transition-colors"
                >¿Olvidaste tu contraseña?</a
              >
            </div>
            <div class="relative">
              <div
                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-500 group-focus-within:text-blue-600 transition-colors"
              >
                <span class="icon-[heroicons--lock-closed]"></span>
              </div>
              <input
                type="password"
                class="w-full pl-10 pr-4 py-3 bg-white/90 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition placeholder-gray-400"
                placeholder="••••••••"
                required
              />
            </div>
          </div>

          <!-- Opción recordar usuario -->
          <div class="flex items-center">
            <input
              id="remember"
              name="remember"
              type="checkbox"
              class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
            />
            <label for="remember" class="ml-2 block text-sm text-gray-700"
              >Mantener sesión iniciada</label
            >
          </div>

          <!-- Botón de acción principal -->
          <button
            type="submit"
            class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-black font-medium rounded-lg shadow-md hover:shadow-lg transition-all focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          >
            INGRESAR
          </button>
        </form>

        <!-- Divisor -->
        <div class="relative my-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="px-2 bg-white/80 text-sm text-gray-500"
              >O inicia con</span
            >
          </div>
        </div>

        <!-- Botones de autenticación social -->
        <div class="grid grid-cols-3 gap-3">
          <button
            type="button"
            class="flex justify-center items-center py-2 px-4 bg-white border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
          >
            <span class="icon-[mdi--google] text-red-500 text-xl"></span>
          </button>
          <button
            type="button"
            class="flex justify-center items-center py-2 px-4 bg-white border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
          >
            <span class="icon-[mdi--apple] text-gray-800 text-xl"></span>
          </button>
          <button
            type="button"
            class="flex justify-center items-center py-2 px-4 bg-white border border-gray-300 rounded-lg shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
          >
            <span class="icon-[mdi--github] text-gray-800 text-xl"></span>
          </button>
        </div>

        <!-- Enlace a registro -->
        <p class="mt-6 text-center text-sm text-gray-600">
          ¿No tienes cuenta? <a
            href="#"
            class="font-medium text-blue-600 hover:text-blue-800 transition-colors"
            >Regístrate aquí</a
          >
        </p>
      </div>
    </div>
  </div>
</Layout>
