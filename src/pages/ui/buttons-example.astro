---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";
---

<Layout>
  <div class="max-w-md mx-auto p-4 space-y-4">
    <h1 class="text-2xl font-bold mb-6">Ejemplo de Botones</h1>

    <div class="space-y-2">
      <Button variant="primary" size="lg" fullWidth>Registrarse</Button>
      <Button variant="default" fullWidth>Iniciar con Google</Button>
      <Button variant="link" asLink href="/login" fullWidth
        >¿Ya tienes cuenta? Inicia sesión</Button
      >
    </div>

    <div class="flex gap-2 mt-6">
      <Button variant="primary" size="sm">Aceptar</Button>
      <Button variant="secondary" size="sm">Opcion</Button>
      <Button variant="danger" size="sm">Cancelar</Button>
      <Button variant="text" size="sm">Más opciones</Button>
    </div>
  </div>
</Layout>
