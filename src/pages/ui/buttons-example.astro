---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";
---

<Layout>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-800 mb-3">
        Button Component Gallery
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Explore our collection of customizable button styles and variants
      </p>
    </header>

    <div class="bg-white rounded-xl shadow-sm p-8 border border-gray-100">
      <!-- Primary Buttons Section -->
      <section class="mb-10">
        <h2
          class="text-2xl font-semibold text-gray-800 mb-6 pb-2 border-b border-gray-100"
        >
          Primary Actions
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <h3 class="font-medium text-gray-700">Large</h3>
            <Button variant="primary" size="lg" fullWidth class="group">
              Get Started
              <span
                class="icon-[heroicons--arrow-right] ml-2 group-hover:translate-x-1 transition-transform"
              ></span>
            </Button>
            <Button variant="primary" size="lg" disabled fullWidth>
              Loading...
              <span class="icon-[heroicons--arrow-path] ml-2 animate-spin"
              ></span>
            </Button>
          </div>
          <div class="space-y-4">
            <h3 class="font-medium text-gray-700">Regular</h3>
            <Button variant="primary">Confirm</Button>
            <Button variant="primary" disabled>Processing...</Button>
          </div>
        </div>
      </section>

      <!-- Secondary Buttons Section -->
      <section class="mb-10">
        <h2
          class="text-2xl font-semibold text-gray-800 mb-6 pb-2 border-b border-gray-100"
        >
          Secondary Variants
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="space-y-4">
            <Button variant="default">Default</Button>
            <Button variant="default" disabled>Disabled</Button>
          </div>
          <div class="space-y-4">
            <Button variant="secondary">Secondary</Button>
            <Button variant="secondary" disabled>Disabled</Button>
          </div>
          <div class="space-y-4">
            <Button variant="danger">Danger</Button>
            <Button variant="danger" disabled>Disabled</Button>
          </div>
        </div>
      </section>

      <!-- Special Buttons Section -->
      <section class="mb-10">
        <h2
          class="text-2xl font-semibold text-gray-800 mb-6 pb-2 border-b border-gray-100"
        >
          Special Styles
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <h3 class="font-medium text-gray-700">Text & Link Buttons</h3>
            <Button variant="text">Text Button</Button>
            <Button variant="link" asLink href="/login">
              Link Style
              <span
                class="icon-[heroicons--arrow-top-right-on-square] ml-1.5 text-sm"
              ></span>
            </Button>
          </div>
          <div class="space-y-4">
            <h3 class="font-medium text-gray-700">Social Logins</h3>
            <Button variant="default" fullWidth class="justify-center">
              <span class="icon-[mdi--google] mr-2 text-lg"></span>
              Continue with Google
            </Button>
            <Button variant="default" fullWidth class="justify-center">
              <span class="icon-[mdi--github] mr-2 text-lg"></span>
              GitHub Login
            </Button>
          </div>
        </div>
      </section>

      <!-- Button Group Example -->
      <section>
        <h2
          class="text-2xl font-semibold text-gray-800 mb-6 pb-2 border-b border-gray-100"
        >
          Button Groups
        </h2>
        <div class="space-y-6">
          <div>
            <h3 class="font-medium text-gray-700 mb-3">Horizontal Group</h3>
            <div class="flex flex-wrap gap-2">
              <Button variant="primary" size="sm">Save</Button>
              <Button variant="secondary" size="sm">Edit</Button>
              <Button variant="danger" size="sm">Delete</Button>
              <Button variant="text" size="sm">Share</Button>
            </div>
          </div>
          <div>
            <h3 class="font-medium text-gray-700 mb-3">Vertical Group</h3>
            <div class="flex flex-col space-y-2 max-w-xs">
              <Button variant="default" fullWidth>Option 1</Button>
              <Button variant="default" fullWidth>Option 2</Button>
              <Button variant="default" fullWidth>Option 3</Button>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout>
