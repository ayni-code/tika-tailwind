---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="container mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-800 mb-4">
        Ejemplos de UI con Astro
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Colección de patrones de diseño y componentes reutilizables
      </p>
    </header>

    <!-- Sección de Blog -->
    <section class="mb-16">
      <h2 class="text-2xl font-semibold mb-6 text-gray-800 border-b pb-2">
        Ejemplos de Blog
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/blog/grid-layout" class="group">
          <div
            class="bg-white rounded-xl shadow-md overflow-hidden transition-all hover:shadow-lg hover:-translate-y-1 h-full flex flex-col"
          >
            <div
              class="h-48 bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center"
            >
              <span class="text-white text-5xl icon-[mdi--grid]"></span>
            </div>
            <div class="p-6 flex-grow">
              <h3 class="text-xl font-bold mb-2">Grid Layout</h3>
              <p class="text-gray-600">Layout de posts usando CSS Grid</p>
            </div>
            <div class="px-6 pb-4">
              <span
                class="inline-flex items-center text-blue-600 group-hover:text-blue-800 transition-colors"
              >
                Ver ejemplo
                <span class="icon-[heroicons--arrow-right] ml-1"></span>
              </span>
            </div>
          </div>
        </a>

        <a href="/blog/flex-layout" class="group">
          <div
            class="bg-white rounded-xl shadow-md overflow-hidden transition-all hover:shadow-lg hover:-translate-y-1 h-full flex flex-col"
          >
            <div
              class="h-48 bg-gradient-to-r from-green-500 to-teal-600 flex items-center justify-center"
            >
              <span class="text-white text-5xl icon-[mdi--view-agenda-outline]"
              ></span>
            </div>
            <div class="p-6 flex-grow">
              <h3 class="text-xl font-bold mb-2">Flex Layout</h3>
              <p class="text-gray-600">Layout de posts usando Flexbox</p>
            </div>
            <div class="px-6 pb-4">
              <span
                class="inline-flex items-center text-blue-600 group-hover:text-blue-800 transition-colors"
              >
                Ver ejemplo
                <span class="icon-[heroicons--arrow-right] ml-1"></span>
              </span>
            </div>
          </div>
        </a>

        <a href="/blog/post" class="group">
          <div
            class="bg-white rounded-xl shadow-md overflow-hidden transition-all hover:shadow-lg hover:-translate-y-1 h-full flex flex-col"
          >
            <div
              class="h-48 bg-gradient-to-r from-red-500 to-orange-600 flex items-center justify-center"
            >
              <span class="text-white text-5xl icon-[mdi--post-outline]"></span>
            </div>
            <div class="p-6 flex-grow">
              <h3 class="text-xl font-bold mb-2">Post Completo</h3>
              <p class="text-gray-600">Ejemplo detallado de un artículo</p>
            </div>
            <div class="px-6 pb-4">
              <span
                class="inline-flex items-center text-blue-600 group-hover:text-blue-800 transition-colors"
              >
                Ver ejemplo
                <span class="icon-[heroicons--arrow-right] ml-1"></span>
              </span>
            </div>
          </div>
        </a>
      </div>
    </section>

    <!-- Sección de Login -->
    <section class="mb-16">
      <h2 class="text-2xl font-semibold mb-6 text-gray-800 border-b pb-2">
        Ejemplos de Login
      </h2>
      <div class="grid md:grid-cols-4 gap-4">
        <a href="/login/basic" class="group">
          <div
            class="bg-white rounded-lg shadow-md p-6 text-center transition-all hover:shadow-lg hover:-translate-y-1 h-full"
          >
            <div
              class="h-16 w-16 bg-rose-100 text-rose-600 rounded-2xl flex items-center justify-center mx-auto mb-4"
            >
              <span class="icon-[mdi--login] text-2xl"></span>
            </div>
            <h3 class="font-medium text-lg mb-1">Básico</h3>
            <p class="text-gray-500 text-sm">Formulario simple</p>
          </div>
        </a>

        <a href="/login/modern" class="group">
          <div
            class="bg-white rounded-lg shadow-md p-6 text-center transition-all hover:shadow-lg hover:-translate-y-1 h-full"
          >
            <div
              class="h-16 w-16 bg-cyan-100 text-cyan-600 rounded-2xl flex items-center justify-center mx-auto mb-4"
            >
              <span class="icon-[mdi--login] text-2xl"></span>
            </div>
            <h3 class="font-medium text-lg mb-1">Moderno</h3>
            <p class="text-gray-500 text-sm">Diseño actual</p>
          </div>
        </a>

        <a href="/login/animated" class="group">
          <div
            class="bg-white rounded-lg shadow-md p-6 text-center transition-all hover:shadow-lg hover:-translate-y-1 h-full"
          >
            <div
              class="h-16 w-16 bg-indigo-100 text-indigo-600 rounded-2xl flex items-center justify-center mx-auto mb-4"
            >
              <span class="icon-[mdi--login] text-2xl"></span>
            </div>
            <h3 class="font-medium text-lg mb-1">Animado</h3>
            <p class="text-gray-500 text-sm">Con efectos animados</p>
          </div>
        </a>

        <a href="/login/glassmorphism" class="group">
          <div
            class="bg-white rounded-lg shadow-md p-6 text-center transition-all hover:shadow-lg hover:-translate-y-1 h-full"
          >
            <div
              class="h-16 w-16 bg-blue-100 text-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4"
            >
              <span class="icon-[mdi--login] text-2xl"></span>
            </div>
            <h3 class="font-medium text-lg mb-1">Glassmorphism</h3>
            <p class="text-gray-500 text-sm">Efecto vidrio</p>
          </div>
        </a>
      </div>
    </section>

    <!-- Sección de Componentes -->
    <section>
      <h2 class="text-2xl font-semibold mb-6 text-gray-800 border-b pb-2">
        Componentes UI
      </h2>
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/ui/buttons-example" class="group">
          <div
            class="bg-white rounded-xl shadow-md overflow-hidden transition-all hover:shadow-lg hover:-translate-y-1 h-full flex flex-col"
          >
            <div
              class="h-48 bg-gradient-to-r from-yellow-500 to-amber-600 flex items-center justify-center"
            >
              <span class="text-white text-5xl icon-[mdi--button-pointer]"
              ></span>
            </div>
            <div class="p-6 flex-grow">
              <h3 class="text-xl font-bold mb-2">Botones</h3>
              <p class="text-gray-600">Variantes y estados</p>
            </div>
            <div class="px-6 pb-4">
              <span
                class="inline-flex items-center text-blue-600 group-hover:text-blue-800 transition-colors"
              >
                Ver ejemplo
                <span class="icon-[heroicons--arrow-right] ml-1"></span>
              </span>
            </div>
          </div>
        </a>

        <a href="/ui/form-styling" class="group">
          <div
            class="bg-white rounded-xl shadow-md overflow-hidden transition-all hover:shadow-lg hover:-translate-y-1 h-full flex flex-col"
          >
            <div
              class="h-48 bg-gradient-to-r from-purple-500 to-pink-600 flex items-center justify-center"
            >
              <span class="text-white text-5xl icon-[mdi--form-textbox]"></span>
            </div>
            <div class="p-6 flex-grow">
              <h3 class="text-xl font-bold mb-2">Formularios</h3>
              <p class="text-gray-600">Estilos y validaciones</p>
            </div>
            <div class="px-6 pb-4">
              <span
                class="inline-flex items-center text-blue-600 group-hover:text-blue-800 transition-colors"
              >
                Ver ejemplo
                <span class="icon-[heroicons--arrow-right] ml-1"></span>
              </span>
            </div>
          </div>
        </a>

        <a href="/ui/pseudo-classes-demo" class="group">
          <div
            class="bg-white rounded-xl shadow-md overflow-hidden transition-all hover:shadow-lg hover:-translate-y-1 h-full flex flex-col"
          >
            <div
              class="h-48 bg-gradient-to-r from-emerald-500 to-green-600 flex items-center justify-center"
            >
              <span class="text-white text-5xl icon-[mdi--code-braces]"></span>
            </div>
            <div class="p-6 flex-grow">
              <h3 class="text-xl font-bold mb-2">Pseudo-clases</h3>
              <p class="text-gray-600">Selectores avanzados</p>
            </div>
            <div class="px-6 pb-4">
              <span
                class="inline-flex items-center text-blue-600 group-hover:text-blue-800 transition-colors"
              >
                Ver ejemplo
                <span class="icon-[heroicons--arrow-right] ml-1"></span>
              </span>
            </div>
          </div>
        </a>
      </div>
    </section>
  </div>
</Layout>
